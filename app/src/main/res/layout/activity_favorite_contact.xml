<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="findContactByIdViewModel"
            type="io.github.wellingtoncosta.cursoandroidcongressodeti.application.viewmodels.FindContactByIdViewModel" />

        <variable
            name="updateFavoriteContactViewModel"
            type="io.github.wellingtoncosta.cursoandroidcongressodeti.application.viewmodels.UpdateFavoriteContactViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".application.ui.modules.favoritecontact.FavoriteContactActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/favorite_contact_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:title="@string/main.toolbar_title">

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/favorite_contact_container_constraint_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="@{safeUnbox(findContactByIdViewModel.loading) ? View.GONE : View.VISIBLE}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/favorite_contact_name_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_padding_size_xxxlarge"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:paddingStart="@dimen/margin_padding_size_medium"
                        android:paddingEnd="@dimen/margin_padding_size_small"
                        android:text="@{findContactByIdViewModel.contact.name}"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/text_size_xlarge"
                        tools:text="Eric C. LeÃ£o" />

                    <TextView
                        android:id="@+id/favorite_contact_email_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_padding_size_small"
                        android:ellipsize="end"
                        android:paddingStart="@dimen/margin_padding_size_medium"
                        android:paddingEnd="@dimen/margin_padding_size_medium"
                        android:text="@{findContactByIdViewModel.contact.email}"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="@dimen/text_size_large"
                        tools:text="ericcleao@gmail.com" />

                    <TextView
                        android:id="@+id/favorite_contact_phone_number_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_padding_size_small"
                        android:ellipsize="end"
                        android:paddingStart="@dimen/margin_padding_size_medium"
                        android:paddingLeft="@dimen/margin_padding_size_medium"
                        android:paddingEnd="@dimen/margin_padding_size_medium"
                        android:paddingRight="@dimen/margin_padding_size_medium"
                        android:paddingBottom="@dimen/margin_padding_size_small"
                        android:text="@{findContactByIdViewModel.contact.phoneNumber}"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="@dimen/text_size_large"
                        tools:text="(82)99999-9999" />

                </LinearLayout>

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="@{safeUnbox(findContactByIdViewModel.loading) ? View.VISIBLE : View.GONE}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/favorite_contact_floating_action_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:onClick="@{() -> updateFavoriteContactViewModel.favorite(findContactByIdViewModel.contact)}"
                android:visibility="@{safeUnbox(findContactByIdViewModel.loading) ? View.GONE : View.VISIBLE}"
                app:fabSize="auto"
                android:tint="@color/colorWhite"
                app:layout_anchor="@+id/favorite_contact_container_constraint_layout"
                app:layout_anchorGravity="end|bottom" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </LinearLayout>

</layout>